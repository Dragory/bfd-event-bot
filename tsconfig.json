{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "es2022",
    "lib": ["es2022"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts"]
}
